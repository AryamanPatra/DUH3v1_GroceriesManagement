<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_18sdp"
    >

    <ImageView
        android:id="@+id/recipePicImvRep"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/recipeNameEdtRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recipe Name"
        android:text="Recipe Name"
        android:textStyle="bold"
        android:textSize="@dimen/_35sdp"
        android:background="null"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipePicImvRep" />

    <EditText
        android:id="@+id/recipeDescEdtRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:lines="2"
        android:maxLines="5"
        android:hint="Recipe Description"
        android:text="Recipe Description"
        android:background="null"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameEdtRep" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeIngredientsListRvRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeDescEdtRep" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeStepsListRvRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@+id/recipeIngredientsListRvRep"
        />

</androidx.constraintlayout.widget.ConstraintLayout>